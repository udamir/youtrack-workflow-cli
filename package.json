{
  "name": "youtrack-workflow-cli",
  "version": "0.6.0",
  "description": "Youtrack workflow CLI",
  "repository": {
    "type": "git",
    "url": "https://github.com/udamir/youtrack-workflow-cli.git"
  },
  "main": "dist/index.js",
  "bin": {
    "ytw": "./bin/ytw"
  },
  "author": "Damir Yusipov",
  "license": "MIT",
  "preferGlobal": true,
  "scripts": {
    "build": "tsc",
    "lint": "biome lint",
    "format": "biome format",
    "test": "jest",
    "prepublish": "npm run build && npm run lint && npm run test"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "youtrack",
    "workflow",
    "scripts",
    "cli",
    "ytw"
  ],
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "dotenv": "^16.5.0",
    "inquirer": "^12.6.0",
    "jszip": "^3.10.1",
    "ora": "5.4.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/jest": "^29.5.14",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest"
      ]
    },
    "testMatch": [
      "**/test/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "ytw": {
    "linting": {
      "enableEslint": true,
      "enableTypeCheck": false,
      "failOnWarnings": false,
      "maxWarnings": 10
    }
  }
}
